{
  "name": "neatcoder",
  "displayName": "NeatCoder",
  "description": "AI agent for writing large scale, production-grade software",
  "version": "0.0.1",
  "icon": "assets/neatwork-logo.png",
  "repository": {
    "url": "https://github.com/neatwork-ai/neatcode.git",
    "type": "git"
  },
  "license": "UNLICENSED",
  "engines": {
    "vscode": ">=1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.startJob",
        "title": "Run Job",
        "icon": "$(play)"
      },
      {
        "command": "extension.addSchema",
        "title": "Select files to add to an Interface Component",
        "icon": "$(add)"
      },
      {
        "command": "extension.startPrompt",
        "title": "Start Project"
      },
      {
        "command": "extension.addDatastore",
        "title": "Add Datastore",
        "icon": "$(database)"
      },
      {
        "command": "extension.addApi",
        "title": "Add API",
        "icon": "$(plug)"
      },
      {
        "command": "extension.removeInterface",
        "title": "Remove Interface",
        "icon": "$(trash)"
      },
      {
        "command": "extension.removeSchema",
        "title": "Remove Schema",
        "icon": "$(remove)"
      },
      {
        "command": "extension.debugAppState",
        "title": "Print AppState"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "activityBarViews",
          "title": "Neatcoder",
          "icon": "assets/neatwork-icon-bar.svg"
        }
      ]
    },
    "views": {
      "activityBarViews": [
        {
          "id": "jobQueueView",
          "name": "JOB QUEUE"
        },
        {
          "id": "auditTrailView",
          "name": "AUDIT TRAIL"
        },
        {
          "id": "interfacesView",
          "name": "INTERFACES"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "extension.startJob",
          "when": "view == jobQueueView",
          "group": "navigation@1"
        },
        {
          "command": "extension.addDatastore",
          "when": "view == interfacesView",
          "group": "navigation@1"
        },
        {
          "command": "extension.addApi",
          "when": "view == interfacesView",
          "group": "navigation@2"
        },
        {
          "command": "extension.removeInterface",
          "when": "view == interfacesView",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "extension.addSchema",
          "when": "view == interfacesView && (viewItem == databaseItem || viewItem == apiItem)",
          "group": "inline"
        },
        {
          "command": "extension.removeSchema",
          "when": "view == interfacesView && viewItem == fileItem",
          "group": "inline"
        }
      ],
      "commandPalette": [
        {
          "command": "extension.debugAppState"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/chai": "^4.3.6",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/pako": "^2.0.0",
    "@types/vscode": ">=1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "chai": "^4.3.8",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^3.0.3",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@wasm-tool/wasm-pack-plugin": "^1.7.0",
    "pako": "^2.1.0",
    "rimraf": "^5.0.1",
    "ws": "^8.13.0"
  }
}
